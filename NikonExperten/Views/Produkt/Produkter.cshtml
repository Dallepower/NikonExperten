@using System.Diagnostics.Eventing.Reader
@using RepoNE

@model ProduktListe

@{
    ViewBag.Title = "Produkter";
    Layout = "~/Views/Shared/FrontLayout.cshtml";
}

@*<h5>@Model.Kategori.Navn</h5>*@

<div class="three columns" style="border: 2px solid orange; margin-left: 30px;">
    <table>
        <tr>
            <td>
                @if (Model != null)
                {
                    <form name="myForm" action="/Produkt/Produkter/" enctype="multipart/form-data" method="post">
                        <select name="KatID">
                            @foreach (var p in Model.Produkter)
                            {
                                <option value="@p.ID">@p.Navn</option>
                            }
                        </select>
                    </form>
                }
            </td>
        </tr>
        <tr>
            <td></td>
        </tr>
        <tr>
            <td></td>
        </tr>
        <tr>
            <td></td>
        </tr>
    </table>
</div>

@foreach (var produkt in Model.Produkter)
{
    <div class="eight columns" style="border: 2px solid orange; height: 115px; margin-bottom: 35px; margin-right: 30px; float: right;">
        <table>
            <tr>
                <td style="padding-left: 15px">
                    <img src="~/Content/Produkter/@produkt.Billede" style="width: 100px; height: 100px;" />
                </td>
                <td style="padding-left: 25px;">
                    Varenummer:
                    <br />
                    Pris:
                    <br />
                    Leveringstid:
                </td>
                <td style="padding-left: 10px;">
                    @produkt.Varenummer
                    <br />
                    @produkt.Pris
                    <br />
                    @produkt.Leveringstid
                </td>
                <td style="padding-left: 10px;">
                    Producent
                    <br />
                    Tilbud:
                    <br />
                    Lager antal:
                </td>
                <td style="padding-left: 10px;">
                    @produkt.Producent
                    <br />
                    @produkt.Tildbudspris
                    <br />
                    @produkt.Lagerantal
                </td>
                <td style="padding-left: 80px;">
                    <img src="~/Content/Produkter/info.png" style="height: 50px; width: 50px;" />
                    <br />
                    <a href="#">[Se mere]</a>



                </td>
            </tr>
        </table>
    </div>
}




